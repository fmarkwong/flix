<header id="content-header">
  <h1>Sign In</h1>
  <p>No account yet? <%= link_to 'Sign Up!', signup_path %></p>
</header>

<%= form_tag(session_path) do %>
  <fieldset>
    <ol>
      <li class="required">
        <%= label_tag :email, "Enter email address or password" %>
        <%= text_field_tag :email, nil, required: true, autofocus: true, size: 40 %>
      </li>
      <li class="required">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, required: true, size: 40 %>
      </li>
    </ol>
    <p>
      <%= submit_tag 'Sign In' %>
    </p>
  </fieldset>
<% end %>
